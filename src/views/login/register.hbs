<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
 shadow-lg text-gray-800">
 
    <h1 class="text-3x1 font-bold text-center">Register</h1>

    <!--Funcion para que nos pueda enviar nuestros datos a la base mediante el metodo POST-->
    <form action="" method="post" class="mt-4"> 
        <!--Creacion del formulario para el rgistro-->
        <input type="text" name="name" placeholder="Name"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <input type="email" name="email" placeholder="Email" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <input type="password" name="password" placeholder="password" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white 
        font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Send</button>

        <!--Funcion la cual nos muestra un error por si el correo ya tiene usuario-->
        {{#if error}}
            <p class="text-blue-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
 </div>


