<!--Estilos para nuestra pagina-->
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
 shadow-lg text-gray-800">

    <!--Definicion del titulo para esta pagina con sus ediciones-->
     <h1 class="text-center text-3xl font-bold">Alta de personal</h1>

    <!--Funcion para que nos pueda enviar nuestros daatos a la base mediante el metodo POST-->
    <form action="" method="POST" class="mt-4"> 

        <!--Creacion de toda nuestra formulario para pedir los datos-->
        <!--El name tiene que ser identico al cual utilizamos en la base de datos para que asi los datos 
        se inserten correctamente-->
        <input type="text" name="nombre" placeholder="Nombre(s)"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="text" name="a_paterno" placeholder="Apellido Paterno"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="text" name="a_materno" placeholder="Apellido Materno"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="email" name="email" placeholder="Correo Electronico" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="password" name="password" placeholder="ContraseÃ±a" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="text" name="telefono" placeholder="Numero telefonico"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <input type="text" name="rol" placeholder="Rol"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        
        <!--Boton para enviar los datos-->
        <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white 
        font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Registrar</button>

        <!--Funcion la cual nos muestra un error por si el correo ya tiene usuario-->
        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
 </div>